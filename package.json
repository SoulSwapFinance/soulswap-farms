{
  "name": "soulswap-farms",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "migrate": "truffle migrate --reset",
    "migrate:test": "truffle migrate --reset --network testnet",
    
    "compile": "truffle compile",
    "compile:test": "truffle compile --network testnet",

    "flat:soul": "truffle-flattener contracts/SoulToken.sol > flats/SoulToken_flat.sol",
    "flat:seance": "truffle-flattener contracts/SeanceCircle.sol > flats/SeanceCircle_flat.sol",
    "flat:bound": "truffle-flattener contracts/SpellBound.sol > flats/SpellBound_flat.sol",
    "flat:chef": "truffle-flattener contracts/MasterChef.sol > flats/MasterChef_flat.sol",

    "flat:vault": "truffle-flattener contracts/SoulVault.sol > flats/SoulVault_flat.sol",
    "flat:sous": "truffle-flattener contracts/SousChef.sol > flats/SousChef_flat.sol",

    "verify:soul": "truffle run verify SoulToken --network testnet --license SPDX-License-Identifier",
    "verify:seance": "truffle run verify SeanceCircle --network testnet --license SPDX-License-Identifier",
    "verify:chef": "truffle run verify MasterChef --network testnet --license SPDX-License-Identifier",

    "verify:vault": "truffle run verify SoulVault --network testnet --license SPDX-License-Identifier",
    "verify:sous": "truffle run verify SousChef --network testnet --license SPDX-License-Identifier",

    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^4.1.0",
    "@openzeppelin/test-helpers": "^0.5.6",
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "dotenv": "^8.2.0",
    "hardhat": "^2.3.0",
    "truffle": "^5.3.4",
    "truffle-flattener": "^1.5.0",
    "truffle-hdwallet-provider-privkey": "^0.3.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.14",
    "solidity-coverage": "^0.7.16",
    "truffle-hdwallet-provider": "^1.0.17",
    "truffle-plugin-verify": "^0.5.7",
    "web3": "^1.3.6"
  }
}
